@model IEnumerable<BusinessObjects.Product>
<h1>Danh sách sản phẩm</h1>
<p><a asp-action="Create">Tạo sản phẩm mới</a></p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.Category.CategoryName)</th>
            <th>@Html.DisplayNameFor(model => model.UnitsInStock)</th>
            <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.UnitsInStock)</td>
                <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.ProductId">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>